{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "Bash(node:*)",
      "Bash(tail:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:bedrockpy.readthedocs.io)",
      "Edit(.commit_message.txt)",
      "Bash(git revert:*)",
      "Bash(git commit:*)",
      "Bash(npm start)",
      "Bash(rm:*)",
      "WebFetch(domain:minecraft.makecode.com)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -ExecutionPolicy Bypass -Command \"$p = Join-Path $env:CLAUDE_PROJECT_DIR '.claude/hooks/auto-commit.ps1'; & $p\""
          }
        ]
      }
    ]
  }
}